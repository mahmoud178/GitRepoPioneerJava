<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/git_card"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_103sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginBottom="-10dp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="@dimen/_71sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardElevation="0dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/git_row_image"
                android:layout_width="@dimen/_71sdp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_border_width="0dp"
                app:riv_corner_radius="@dimen/_8sdp"
                app:riv_oval="false" />

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_toEndOf="@id/card"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/git_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:ellipsize="end"
                android:gravity="start"
                android:maxLines="1"
                android:text="fdsfdsfds" />

            <TextView
                android:id="@+id/git_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/git_name"
                android:layout_marginEnd="@dimen/_20sdp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="fdsfdsfds" />


        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>